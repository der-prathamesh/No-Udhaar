<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Creategroup"
    android:background="#086B38A6">

    <EditText
        android:id="@+id/createagroup"
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_below="@+id/creategrouptop"
        android:layout_centerInParent="true"
        android:layout_marginTop="220dp"
        android:hint="Enter Group Name"
        android:textColorHint="#030947" />

    <Button
        android:id="@+id/buttongroup"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_below="@id/createagroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#4AD813"
        android:fontFamily="@font/poppins_bold"
        android:text="Create group"
        android:textColor="#1A237E" />
</RelativeLayout>